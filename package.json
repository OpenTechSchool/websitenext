{
  "name": "ots_website",
  "version": "2.0.0",
  "description": "OpenTechSchool website 2.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.js pages/**/** components/**/**",
    "lint:watch": "nodemon --exec \"npm run lint || exit 1\" --ext ts,js",
    "clean-cache": "rimraf -rf ./node_modules/.cache",
    "open": "sleepms 5000 && open http://localhost:3000",
    "dev": "npm run clean-cache && npm run lint && concurrently \"npm run lint:watch\" next \"npm run open\" --names \"ðŸ›‚,ðŸ—ï¸,ðŸ–¥ï¸\" --prefix name ",
    "build": "npm run clean-cache && next build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "ots",
    "next"
  ],
  "engines": {
    "node": ">=25",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "gray-matter": "^4.0.3",
    "next": "^15.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-raw": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lodash": "^4.17.23",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prop-types": "^15.8.1",
    "rimraf": "^6.1.2",
    "sleep-ms": "^2.0.1",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false
  }
}
